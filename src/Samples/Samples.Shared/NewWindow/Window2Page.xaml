<Window
    x:Class="Elmish.Uno.Samples.NewWindow.Window2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="400"
    Height="150"
    Title="Window 2">
  <StackPanel DataContext="{Binding Win2}" VerticalAlignment="Center" Width="300">
    <TextBlock Text="Input 1:" />
    <TextBox Text="{Binding Input1, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5" />
    <TextBlock Text="Input 2:" />
    <TextBox Text="{Binding Input2, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5" />
  </StackPanel>
</Window>
