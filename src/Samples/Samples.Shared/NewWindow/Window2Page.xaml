<Page
    x:Class="Samples.NewWindow.Window2Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Samples.NewWindow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <StackPanel
        Width="300"
        VerticalAlignment="Center"
        DataContext="{Binding Win2}">
        <TextBlock Text="Input 1:" />
        <TextBox Margin="0,5,0,5" Text="{Binding Input1, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Text="Input 2:" />
        <TextBox Margin="0,5,0,5" Text="{Binding Input2, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>
</Page>
