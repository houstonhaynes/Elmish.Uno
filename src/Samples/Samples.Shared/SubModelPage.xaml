<Page
    x:Class="Samples.SubModel.SubModelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Samples.SubModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock
            Margin="0,25,0,0"
            HorizontalAlignment="Center"
            FontSize="18"
            FontWeight="Bold"
            Text="Counter with clock 1" />
        <local:CounterWithClock DataContext="{Binding ClockCounter1}" />
        <TextBlock
            Margin="0,25,0,0"
            HorizontalAlignment="Center"
            FontSize="18"
            FontWeight="Bold"
            Text="Counter with clock 2" />
        <local:CounterWithClock DataContext="{Binding ClockCounter2}" />
    </StackPanel>
</Page>
